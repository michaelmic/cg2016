package model;

import java.awt.Color;

public class ColorPoint {
	private int red;
	private int green;
	private int blue;
	private int quanity;
	
	public ColorPoint(Color c) {
		setRed(c.getRed());
		green = c.getGreen();
		blue = c.getBlue();
		quantity = 1;
	}

	public int getRed() {
		return red;
	}

	public int getGreen() {
		return green;
	}

	public int getBlue() {
		return blue;
	}
	
	public int getQuantity() {
		return quanity;
	}
	
	public void add() {
		quanity++;
	}
}
